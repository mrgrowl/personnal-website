<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		<link rel="icon" href="{{ asset('img/icon.ico') }}"/>

		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>


	<body
		class="text-light" style="background-color: #1a232e">

		{#NAVBAR#}
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path('member_index')}}">mrgrowl.fr
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="{{path('projects_user')}}">PROJETS</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('member_contact')}}">CONTACT</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" target="_blank" href="https://github.com/mrgrowl">GITHUB</a>
						</li>
					</ul>
					<ul class="navbar-nav ml-auto">
						{% if not app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('security_login')}}">
									<i class="bi bi-lock-fill text-danger"></i>
								</a>
							</li>
						{% else %}
							{% if is_granted('ROLE_ADMIN') %}

								<li class="nav-item">
									<a class="nav-link text-danger" href="{{path('admin_index')}}">[PANEL ADMIN]</a>
								</li>

							{% endif %}

							<li class="nav-item">
								<a class="nav-link" href="{{path('security_logout')}}">DECONNEXION</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}

	</body>
</html>
