{% extends 'admin.base.html.twig' %}

{% block title %}Version
	{{version.version}}
	-
	{{version.projet.name}}
{% endblock %}

{% block body %}

	<div class="container-fluid">

		<div class="card bg-dark mt-3">

			<div class="card-header text-center fw-bolder">
				{{version.projet.name}}
			</div>

			<div class="card-body">
				<h4 class="card-title text-center mb-5 mt-3">{{version.version}}</h4><hr>

				<h6 class="mt-3" style="text-align: center">Description</h6><hr>
				<p class="card-text">{{version.description|raw}}</p><hr>


			</div>
		</div>


		<a class="btn btn-secondary mt-3 ms-3" href="{{ path('version_index') }}">Retour</a>

		<a class="btn btn-secondary float-end mt-3 me-3" href="{{ path('version_edit', {'id': version.id}) }}">Modifier</a>

	</div>
{% endblock %}
