{% extends 'admin.base.html.twig' %}


{% block title %}Toutes les technologies
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="text-light mt-3" style="text-align:center">Liste des technologies</h1><hr>

		<div class="table-responsive">
			<table class="table table-dark table-hover align-middle">
				<thead>
					<tr style="text-align: center">
						<th>Nom</th>
						<th></th>
					</tr>
				</thead>
				<tbody style="text-align: center">
					{% for technologie in technologies %}
						<tr>
							<td>{{ technologie.name }}</td>
							<td>
								<a class="btn btn-secondary fw-bolder" href="{{ path('technologie_edit', {'id': technologie.id}) }}">MODIFIER</a>
								{{ include('admin/technologie/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">Aucune technologie n'a été trouvée.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a class="btn btn-secondary float-end me-3 mt-3 mb-3 fw-bolder" href="{{ path('technologie_new') }}">Ajouter une technologie</a>
	</div>
{% endblock %}
