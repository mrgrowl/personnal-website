{% extends 'admin.base.html.twig' %}

{% block title %}Tous les projets
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="text-light mt-3" style="text-align:center">Liste des projets</h1><hr>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success text-center fw-bold" role="alert">
				{{message}}
			</div>
		{% endfor %}
		<div class="table-responsive">
			<table class="table table-dark table-hover align-middle">
				<thead>
					<tr style="text-align: center">
						<th>Nom</th>
						<th>Slug</th>
						<th></th>
					</tr>
				</thead>
				<tbody style="text-align: center">
					{% for projet in projets %}
						<tr>
							<td>{{ projet.name }}</td>
							<td>{{projet.slug}}</td>
							<td>
								<a class="btn btn-secondary fw-bolder" href="{{ path('projet_show', {'slug': projet.slug}) }}">AFFICHER</a>
								<a class="btn btn-light fw-bolder" href="{{ path('projet_edit', {'id': projet.id}) }}">MODIFIER</a>
								{{ include('admin/projet/_delete_form.html.twig') }}
							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucun projet trouv√©</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<a class="btn btn-secondary float-end me-3 mt-3 mb-3 fw-bolder" href="{{ path('projet_new') }}">Ajouter un projet</a>
	</div>
{% endblock %}
