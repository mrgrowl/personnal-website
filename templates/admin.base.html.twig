<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		<link rel="icon" href="{{ asset('img/icon.ico') }}"/>

		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>


	<body
		class="text-light" style="background-color: #1a232e">

		{#NAVBAR#}
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand text-danger" href="{{path('admin_index')}}">mrgrowl.fr
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="{{path('projet_index')}}">PROJETS</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('technologie_index')}}">TECHNOLOGIES</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('version_index')}}">VERSIONS</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('user_index')}}">UTILISATEURS</a>
						</li>
					</ul>
					<ul class="navbar-nav ml-auto">

						<li class="nav-item">
							<a class="nav-link" href="{{path('member_index')}}">[PANEL USER]</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="{{path('security_logout')}}">DECONNEXION</a>
						</li>
					</ul>
				</ul>

			</div>
		</div>

		{% for message in app.flashes('success') %}
			<div style="position: fixed; bottom: 10px; right: 10px;">
				<p>
					<div class="alert alert-success fw-bolder" role="alert">{{message}}</div>
				</p>
			</div>
		{% endfor %}

		{% for message in app.flashes('error') %}
			<div style="position: fixed; bottom: 10px; right: 10px;">
				<p>
					<div class="alert alert-danger fw-bolder" role="alert">{{message}}</div>
				</p>
			</div>
		{% endfor %}

	</body>
</html></nav>{% block body %}{% endblock %}</body></html>
